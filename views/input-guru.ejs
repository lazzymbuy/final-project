<% include partials/header-guru.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-guru-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <input type="text" class="form-control" name="guruID" id="guruID" placeholder="Masukkan ID anda" required>
                    </div>
                    <div class="form-group col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <input type="text" class="form-control" name="nama" id="nama" placeholder="Masukkan nama anda" required>
                    </div>
                    <div class="form-group col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <select id="jabatan" name="jabatan" class="form-control" required>
                            <option selected disabled>Pilih Jabatan</option>
                            <option>Guru</option>
                            <option>Wali Kelas</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <input type="number" class="form-control" name="tahunMasuk" id="tahunMasuk" placeholder="Masukkan Tahun Masuk anda" required>
                    </div>
                    <div class="form-group col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <input type="text" class="form-control" name="username" id="username" placeholder="Masukkan Username anda" required>
                    </div>
                    <div class="form-group col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <input type="text" class="form-control" name="password" id="password" placeholder="masukkan Password anda" required>
                    </div>
                    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <label for="guru-img"><b>guru Image</b></label><br>
                        <input type="file" name="image" id="guru-img" class="" required>
                    </div>
                </div>
            <button type="submit" class="btn btn-primary float-right">Add guru</button>
        </form>
    </div>
</div>
<% include partials/footer.ejs %>
