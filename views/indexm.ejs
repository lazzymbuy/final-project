<% include partials/header-murid.ejs %>
    <div class="table-wrapper">
        <% if (murid.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">muridID</th>
                        <th scope="col">Nama</th>
                        <th scope="col">Kelas</th>
                        <th scope="col">Jurusan</th>
                        <th scope="col">Alamat</th>
                        <th scope="col">Username</th>
                        <th scope="col">Password</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% murid.forEach((murid, index) => { %>
                        <tr>
                            <td><img src="public/assets/img/<%= murid.image %>" class="rounded-circle murid-img" alt=""></td>
                            <th scope="row"><%= murid.muridID %></th>
                            <td><%= murid.nama %></td>
                            <td><%= murid.kelas %></td>
                            <td><%= murid.jurusan %></td>
                            <td><%= murid.alamat %></td>
                            <td>@<%= murid.username %></td>
                            <td>@<%= murid.password %></td>
                            <td>
                                <a href="/edit/<%= murid.muridID %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%=murid.muridID %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } 
        else { %>
            <p class="text-center">No murid found. Go <a href="/add" >here</a> to add murid.</p>
        <% } %>
    </div>

<% include partials/footer.ejs %>
